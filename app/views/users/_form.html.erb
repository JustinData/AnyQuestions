<% unless @user.errors.none? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<div id="form_wrapper" class="form_wrapper">
<form class="register">
  <h3>Register</h3>
  <div class="column">
    <div>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
    </div>
    <div>
  <%= f.label :email %>
  <%= f.email_field :email %>
    </div>
  </div>
  <div class="column">
    <div>
  <%= f.label :password %>
  <%= f.password_field :password %>
    </div>
    <div>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
    </div>
  <div>
  <div class="bottom">
    <div class="remember">
      <input type="checkbox">
    </div>
  <%= f.submit %>
<% end %>
</div>